<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastroLocalActivity" >

    <TextView
        android:id="@+id/textView_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Local"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_nomeLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView_cidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cidade do Local"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_cidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView_bairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bairro do Local"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_bairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView_capacidadePublico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maximo de pessoas"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_capacidadePublico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_salvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickSalvar"
            android:text="Salvar" />

        <Button
            android:id="@+id/btn_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickVoltar"
            android:text="Voltar" />
    </LinearLayout>
</LinearLayout>